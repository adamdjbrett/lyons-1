<section class="page-section" id="{{ team.section }}">
<div class="container">
  <div class="row">
	<div class="col-lg-12 text-center">
	  <h2 class="section-heading text-uppercase">{{ team.title }}</h2>
	  <h3 class="section-subheading text-muted">{{ team.text }}</h3>
	</div>
  </div>
  <div class="row">
  {% for person in team.people %}
		<div class="col-lg-12 text-center">
	  <div class="team-member">
		<img class="mx-auto rounded-circle" src="{{ person.image }}" alt="{{ person.name }}">
		<h4>{{ person.name }}</h4>
		<p class="text-muted">{{ person.role }}</p>
		<ul class="list-inline social-buttons">
		{% for network in person.social %}
		  <li class="list-inline-item">
			<a href="{{ network.url }}" class="btn btn-sm btn-dark rounded-circle p-3">
			  <i class="{{ network.icon }} text-white"></i>
			</a>
		  </li>
		{% endfor %}
		</ul>
	  </div>
	</div>
  {% endfor %}
  </div>
  <div class="row">
	<div class="col-lg-8 mx-auto text-center">
	  <div class="large text-muted">{{ team.subtext | safe }}</div>
	</div>
  </div>
</div>
</section>